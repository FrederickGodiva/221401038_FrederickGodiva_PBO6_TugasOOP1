public class Payment {
    double totalPrice;
    String paymentMethod;
    String paymentStatus;

    // Constructor
    public Payment(double totalPrice, String paymentMethod) {
        this.totalPrice = totalPrice;
        this.paymentMethod = paymentMethod;
        this.paymentStatus = "";
    }

    // Method overloading berdasarkan payment method
    public void processPayment(String method) {
        this.paymentMethod = method;
        this.paymentStatus = "Pembayaran Berhasil dengan " + method;
    }

    // Overloaded method untuk Voucher dengan diskon
    public double processPayment(String method, double discountPercentage) {
        this.paymentMethod = method;
        double discountAmount = totalPrice * (discountPercentage / 100);
        totalPrice = totalPrice - discountAmount;
        this.paymentStatus = "Pembayaran Berhasil dengan " + method;
        return totalPrice;
    }

    // Menampilkan detail pembayaran
    public void printPaymentDetail() {
        System.out.println("Metode Pembayaran: " + paymentMethod);
        System.out.println("Status Pembayaran: " + paymentStatus);
    }

    // Mengembalikan total harga akhir
    public double getFinalPrice() {
        return totalPrice;
    }
}
